<% content_for :page_title do %>
  <%= Spree.t(:editing_resource, resource: Spree::StockMovement.model_name.human) %>
<% end %>

<% content_for :page_actions do %>
  <%= back_to_list_button(Spree::StockMovement.model_name.human,
    admin_stock_location_stock_movements_path(stock_location)) %>
<% end %>

<%= render partial: 'spree/admin/shared/error_messages', locals: { target: @stock_movement } %>

<%= form_for [:admin, stock_location, @stock_movement] do |f| %>
  <fieldset>
    <%= render partial: 'form', locals: { f: f } %>
    <%= render partial: 'spree/admin/shared/edit_resource_links', locals: { collection_url: admin_stock_location_stock_movements_path(stock_location) } %>
  </fieldset>
<% end %>
